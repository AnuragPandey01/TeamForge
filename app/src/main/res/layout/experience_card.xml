<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_margin="20dp"
    android:layout_marginBottom="15dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/experience_title"
                android:textSize="16sp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_marginEnd="4dp"
                tools:text = "SIH'23"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:layout_marginEnd="8dp"
                android:tint="#A3000000"
                android:background="@android:color/transparent"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:tint="#A3000000"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/experience_date"
            android:textSize="12sp"
            android:textColor="@color/grey"
            tools:text = "23 jun 2024"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/experience_link"
            tools:text="https://undraw.co/search"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/link_blue"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/experience_description"
            android:layout_marginTop="10dp"
            android:maxLines="5"
            android:ellipsize="end"
            tools:text = "Each contest card should show the contest name, date, and a brief description. Include a quick link to view more details or express interest in forming a team."/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>